{
	"name": "application",
	"version": "1.0.0",
	"description": "Mqtt broker and web application for IoT plant controller",
	"main": "index.js",
	"scripts": {
		"mqtt": "concurrently \"nodemon src/mqtt-broker/broker.ts\"",
		"client": "npm start --prefix src/client",
		"web-app": "concurrently \"npm run client\" \"nodemon src/server.ts\"",
		"dev": "concurrently \"npm run client\" \"nodemon src/server.ts\" \"npm run mqtt\"",
		"build": "tsc -p ."
	},
	"author": "Rahul Eswar",
	"license": "MIT",
	"dependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/jest": "^26.0.5",
		"@types/uuid": "^8.0.0",
		"aedes": "^0.42.4",
		"async-mqtt": "^2.6.1",
		"bcryptjs": "^2.4.3",
		"config": "^3.3.1",
		"express": "^4.17.3",
		"express-validator": "^6.6.0",
		"jsonwebtoken": "^9.0.0",
		"lodash.update": "^4.10.2",
		"mongoose": "^5.9.21",
		"mqtt": "^4.1.0",
		"mqtt-packet": "^6.3.2",
		"uuid": "^8.2.0"
	},
	"devDependencies": {
		"@types/config": "0.0.36",
		"@types/express": "^4.17.7",
		"@types/express-validator": "^3.0.0",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mongoose": "^5.7.32",
		"@types/mqtt": "^2.5.0",
		"@types/node": "^14.0.23",
		"concurrently": "^5.2.0",
		"nodemon": "^2.0.20",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.6"
	}
